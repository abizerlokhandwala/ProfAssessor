li.active1{background-color: #03a9f4}
</style>
<script type="text/javascript">
//sidebar init
$(document).ready(function(){
  $('.sidenav').sidenav();
});
//modal init
$(document).ready(function(){
    $('.modal').modal();
});
//range init
M.Range.init($('input[type=range]'));
</script>

</body>
</html>
