<style type="text/css">
#container {
  margin: 20px;
  width: 400px;
  height: 8px;
}
body {
   display: flex;
   min-height: 100vh;
   flex-direction: column;
 }

 main {
   flex: 1 0 auto;
 }
</style>
<body>

<!-- Top container -->
<main>
<div class="navbar-fixed">
  <nav>
    <div class="nav-wrapper" style="background-color:#121B2C">
      <a href="https://www.pict.edu" class="brand-logo center"><img class="circle" src="/images/pict.jpg" style="width:30%"></a>
      <a href="#" class="brand-logo right">ProfAssessor</a>
      <ul id="nav-mobile" class="left hide-on-med-and-down"></ul>
    </ul><a href="#!" data-target="sidenav-left" class="sidenav-trigger left"><i class="material-icons black-text">menu</i></a>
    </div>
  </nav>
</div>

<!-- Sidebar/menu -->
<div class="row Pad_top">
    <div class="container" style='font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen-Sans,Ubuntu,Cantarell,"Helvetica Neue",sans-serif'>
      <ul id="sidenav-left" class="sidenav sidenav-fixed" style="background-color:#01579b">
        <li>
        <div class="user-view">
          <a href="#user"><img class="circle" src="/images/IMG.png"></a>
          <a href="#name"><span class="white-text name" style='font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen-Sans,Ubuntu,Cantarell,"Helvetica Neue",sans-serif'><%=@name.capitalize%></span></a>
          <span class="white-text name" style='margin-top:0px;font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen-Sans,Ubuntu,Cantarell,"Helvetica Neue",sans-serif'><%=@email%></span>
          <span class="white-text name" style='margin-top:0px;font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen-Sans,Ubuntu,Cantarell,"Helvetica Neue",sans-serif'><%=@student_class%></span>
        </div>
        <hr />
        </li>
        <li><a href="/dashboard" class="logo-container white-text">Dashboard<i class="material-icons left white-text">spa</i></a></li>
        <li class="active1"><a class="waves-effect white-text" href="/courses"><i class="material-icons white-text">code</i>Courses</a></li>
        <li><%= link_to '<i class="material-icons white-text">flare</i>Sign Out'.html_safe, destroy_user_session_path, :method => :delete, :class => "waves-effect white-text" %></li>
      </ul>
    </div>
</div>

<!-- !PAGE CONTENT! -->
<div class="container" style="margin-left:30%">
  <div class="row">
    <div class="col s5">
      <div class="card sticky-action">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" src="images/test1.jpg" style="height:234px">
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4">Cognitive test<i class="material-icons right">more_vert</i></span>
    </div>
    <div class="card-action">
      <a href="dashboard">Course analysis</a>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">Cognitive test<i class="material-icons right">close</i></span>
      <p>Give this test to know your attributes based on our cognitive reasoning engine.</p>
    </div>
  </div>
    </div>
    <div class="col s5">
      <div class="card sticky-action">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" src="images/test2.jpg" style="height:234px">
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4">Java test<i class="material-icons right">more_vert</i></span>
    </div>
    <div class="card-action">
      <a href="test_java">Give the test</a>
      <a href="java_course_analysis">Course analysis</a>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">Java test<i class="material-icons right">close</i></span>
      <p>Give this test to test your java skills.</p>
    </div>
  </div>

    </div>

  </div>
  </div>
  <br>
</main>
  <!-- Footer -->
<!-- End page content -->

